<%= form_for(@player, :html => { class: 'form-horizontal' }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
    <%= f.label :name, 'Nombre', class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control', placeholder: 'Nombre', autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :category, 'Categoría', class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.email_field :category, class: 'form-control', placeholder: 'Categoría' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit submit('jugador', params[:action]), :class => 'btn btn-primary'%>
      <%= link_to 'Cancelar', users_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
